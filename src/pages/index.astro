---
import { Picture } from 'astro:assets';
import photo from '../images/photo-full.jpg';

import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<!doctype html>
<html lang="en">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>
			Senior Full Stack Developer | Typescript, Javascript, Node.js, React.js, Next.js
		</title>
		<meta
			name="description"
			content="Sisir K. Adhikari; A seasoned Full Stack Developer with over 14 years of experience in developing scalable web applications and services. Expert in Node.js, ReactJS, and scalable API development, delivering high-performance solutions for healthcare, logistics, and SEO industries. Proven leader in team management and cross-functional collaboration."
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com/" />
		<link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin="" />
		<link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
		<link rel="manifest" href="/favicons/site.webmanifest" />
	</head>

	<body class="md:flex md:h-screen">
		<article
			class="flex-1 p-8 text-center flex flex-col items-center justify-center h-screen"
		>
			<Picture
				src={photo}
				formats={['avif', 'webp']}
				alt="Sisir Adhikari"
				class="rounded-full"
			/>
			<h1 class="text-4xl font-bold pt-4 pb-0">Sisir Adhikari</h1>
			<h2 class="text-md font-bold pb-4">Senior Full Stack Developer</h2>{
				/* <svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					class="size-5 inline pb-1"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M10.125 2.25h-4.5c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125v-9M10.125 2.25h.375a9 9 0 0 1 9 9v.375M10.125 2.25A3.375 3.375 0 0 1 13.5 5.625v1.5c0 .621.504 1.125 1.125 1.125h1.5a3.375 3.375 0 0 1 3.375 3.375M9 15l2.25 2.25L15 12"
					></path>
				</svg> */
			}
			<div class="text-white py-1 text-sm">
				<a
					href="https://sisir.me/resume"
					class="bg-sky-700 hover:bg-sky-800 rounded-md px-4 py-1">Resume</a
				>
				<a
					href="https://www.linkedin.com/in/sisir/"
					class="bg-sky-700 hover:bg-sky-800 rounded-md px-4 py-1">Linkedin</a
				>
				<a
					href="https://www.toptal.com/resume/sisir-kanti-adhikari"
					class="bg-sky-700 hover:bg-sky-800 rounded-md px-4 py-1">Toptal</a
				>
			</div>
			<div id="meeting" class="text-white text-sm py-1">
				<a
					href="https://forms.fillout.com/t/5AnG5ABiM4us"
					class="bg-sky-700 hover:bg-sky-800 rounded-md px-4 py-1">Send email</a
				>
				<a
					href="https://calendly.com/prionkor/30min"
					class="bg-sky-700 hover:bg-sky-800 rounded-md px-4 py-1"
					>Schedule meeting</a
				>
			</div>
			<div class="social-icons"></div>
		</article>
		<section class="flex-1 p-4 bg-stone-100 overflow-y-auto">
			<header>
				<h2 class="text-2xl font-bold ml-4">From The Blog</h2>
			</header>
			{
				posts.map(post => (
					<article class="bg-white m-4">
						<a class="block p-4" href={'/blog/' + post.data.slug}>
							<h3 class="text-xl font-bold rounded-md pb-2 text-sky-700">
								{post.data.title}
							</h3>
							<p class="text-sm text-gray-700">{post.data.excerpt}</p>
							<small class="text-xs text-gray-500 italic">
								by Sisir Adhikari | {post.data.publishDate.toDateString()}
							</small>
						</a>
					</article>
				))
			}
		</section>
	</body>
</html>
